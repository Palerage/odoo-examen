<?xml version="1.0" encoding="utf-8"?>

<odoo>   

    <template id="custom_snippets" inherit_id="website.snippets" name="Custom Snippets">

        <xpath expr="//div[@id='snippet_structure']" position="before">
            
            <div id="snippet_structure" class="o_panel">
                <div class="o_panel_header">Alkoteket</div>
                <div class="o_panel_body">

                    <t t-snippet="Alkoteket.show_drinks" t-thumbnail="/website/static/src/img/snippets_thumbs/s_banner.svg">

                        <keywords>hero, jumbotron</keywords>

                    </t>

                    <t t-snippet="Alkoteket.show_ingredients" t-thumbnail="/website/static/src/img/snippets_thumbs/s_banner.svg">

                        <keywords>hero, jumbotron</keywords>

                    </t>

                    <t t-snippet="Alkoteket.drink_page" t-thumbnail="/website/static/src/img/snippets_thumbs/s_banner.svg">

                        <keywords>hero, jumbotron</keywords>

                    </t>

                    <t t-snippet="Alkoteket.profile_drinks" t-thumbnail="/website/static/src/img/snippets_thumbs/s_banner.svg">

                        <keywords>hero, jumbotron</keywords>

                    </t>

                    <t t-snippet="Alkoteket.fav_drinks" t-thumbnail="/website/static/src/img/snippets_thumbs/s_banner.svg">

                        <keywords>hero, jumbotron</keywords>

                    </t>

                    <t t-snippet="Alkoteket.create_drink" t-thumbnail="/website/static/src/img/snippets_thumbs/s_banner.svg">

                        <keywords>hero, jumbotron</keywords>

                    </t>
                    <t t-snippet="Alkoteket.review_form" t-thumbnail="/website/static/src/img/snippets_thumbs/s_banner.svg">

                        <keywords>hero, jumbotron</keywords>

                    </t>
                    <t t-snippet="Alkoteket.profile_info" t-thumbnail="/website/static/src/img/snippets_thumbs/s_banner.svg">

                        <keywords>hero, jumbotron</keywords>

                    </t>

                    <t t-snippet="Alkoteket.comment_box" t-thumbnail="/website/static/src/img/snippets_thumbs/s_banner.svg">

                        <keywords>hero, jumbotron</keywords>

                    </t>


                </div>
            </div>
        </xpath>

    </template>

</odoo>
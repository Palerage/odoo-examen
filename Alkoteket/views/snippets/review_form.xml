<?xml version="1.0" encoding="utf-8"?>
<odoo>   
    <template id="review_form" name="Review Form">
        <section class="review-form container">
            <form class="reviewformula" id="review-form">
                <div class="top_section">
                    <h3>Review</h3>
                    <div class="rating_section">
                        <span class="fa fa-star-o" data-rating="1"></span>
                        <span class="fa fa-star-o" data-rating="2"></span>
                        <span class="fa fa-star-o" data-rating="3"></span>
                        <span class="fa fa-star-o" data-rating="4"></span>
                        <span class="fa fa-star-o" data-rating="5"></span>
                    </div>
                </div>
                <textarea id="myreview" name="myreview"></textarea>
                <input id="reviewsubmit" disabled="" type="submit" value="SUBMIT"/>
            </form>
        </section>
    </template>
</odoo>
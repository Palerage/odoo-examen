<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_user_tree" model="ir.ui.view">
        <field name="name">alkoteket.user.tree</field>
        <field name="model">alkoteket.user</field>
        <field name="arch" type="xml">
            <tree>
                <field name="user_id"/>
                <field name="fav_drinks"/>
            </tree>
        </field>
    </record>

    <record id="view_user_form" model="ir.ui.view">
        <field name="name">alkoteket.user.form</field>
        <field name="model">alkoteket.user</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="user_id"/>
                        </group>
                        <group>
                            <field name="fav_drinks"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_alkoteket_user" model="ir.actions.act_window">
        <field name="name">User</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">alkoteket.user</field>
        <field name="view_mode">tree,form</field>
        <field name="context"></field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first user!
            </p>
        </field>
    </record>

    <menuitem id="menu_user"
        name="users"
        parent="menu_alkoteket_root"
        action="action_alkoteket_user"
        sequence="20"/>


</odoo>